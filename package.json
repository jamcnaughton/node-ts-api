{
  "name": "city-api",
  "version": "1.0.0",
  "scripts": {
    "api:build": "NODE_ENV=production webpack --config packages/api/webpack.config.js --progress",
    "api:apidoc": "apidoc -i packages/api/src/endpoint/ -o apidoc/",
    "api:doc": "typedoc --options typedoc.json packages/api",
    "api:install:dev": "NODE_ENV=development npm install",
    "api:install:prod": "NODE_ENV=production npm install",
    "api:lint": "tslint -c tslint.json --project tsconfig.json 'packages/api/src/**/*.ts'",
    "api:lint:fix": "tslint -c tslint.json --project tsconfig.json 'packages/api/src/**/*.ts' --fix",
    "api:start:dev": "NODE_ENV=development nodemon --exec ts-node -r tsconfig-paths/register packages/api/src/bin/www.ts",
    "api:test": "NODE_ENV=test TS_NODE_PROJECT=tsconfig.json mocha --opts ./mocha.opts packages/api/src/**/*.e2e-spec.ts",
    "api:test:coverage": "NODE_ENV=test TS_NODE_PROJECT=tsconfig.json nyc --check-coverage -- mocha --opts ./mocha.opts packages/api/src/**/*.e2e-spec.ts",
    "forever": "forever bin/www 8080"
  },
  "private": true,
  "dependencies": {
    "apidoc": "^0.19.1",
    "bluebird": "^3.5.1",
    "core-js": "^2.5.4",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "forever": "^1.0.0",
    "haversine": "1.1.1",
    "helmet": "^3.21.1",
    "morgan": "^1.9.1",
    "node-fetch": "2.6.0",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "tslib": "^1.9.3",
    "uuid": "^3.4.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.1",
    "@types/chai": "4.2.12",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.0.35",
    "@types/haversine": "1.1.4",
    "@types/helmet": "0.0.34",
    "@types/fetch-mock": "7.3.2",
    "@types/mime-types": "2.1.0",
    "@types/mocha": "^2.2.40",
    "@types/morgan": "^1.7.32",
    "@types/node": "^6.0.66",
    "@types/node-fetch": "2.5.7",
    "@types/should": "^8.1.30",
    "@types/supertest": "2.0.10",
    "@types/uuid": "^3.0.0",
    "@types/winston": "^2.4.4",
    "awesome-typescript-loader": "^3.1.3",
    "chai": "4.2.0",
    "fetch-mock": "7.7.3",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-multi-reporters": "^1.1.7",
    "mochawesome": "^3.0.3",
    "nodemon": "^1.18.3",
    "nyc": "14.1.1",
    "path": "^0.12.7",
    "protractor": "^5.4.2",
    "should": "^13.2.3",
    "source-map-support": "0.5.9",
    "supertest": "4.0.2",
    "ts-node": "~5.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^5.11.0",
    "typedoc": "0.16.11",
    "typedoc-plugin-external-module-name": "4.0.3",
    "typescript": "3.1.6",
    "webpack": "^2.5.1",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-merge": "^4.1.0",
    "webpack-node-externals": "^1.5.4"
  }
}
